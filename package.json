{
  "name": "accessibility-guardian",
  "displayName": "Accessibility Guardian",
  "description": "Catch ADA/HIPAA accessibility violations before they cost you.",
  "version": "0.2.2",
  "publisher": "racer01111000",
  "license": "LicenseRef-EVALUATION",
  "repository": {
    "type": "git",
    "url": "https://github.com/Racer-01111000/accessibility-guardian.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onCommand:accessibilityGuardian.scanActiveFile"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE.txt"
  ],
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "build": "tsc -p ./",
    "bundle": "node esbuild.config.js",
    "watch": "tsc -w -p ./",
    "clean": "rm -rf dist out"
  },
  "contributes": {
    "commands": [
      {
        "command": "accessibilityGuardian.scanActiveFile",
        "title": "Accessibility Guardian: Scan Active File"
      },
      {
        "command": "accessibilityGuardian.scanHtmlHipaa",
        "title": "Accessibility Guardian: Scan HTML for HIPAA"
      },
      {
        "command": "accessibilityGuardian.scanGdprEu",
        "title": "Accessibility Guardian: Scan for GDPR (EU)"
      }
    ],
    "configuration": {
      "title": "Accessibility Guardian",
      "properties": {
        "accessibilityGuardian.enableHipaa": {
          "type": "boolean",
          "default": true,
          "description": "Enable scanning for Protected Health Information (PHI) and HIPAA risks."
        },
        "accessibilityGuardian.enableWcag": {
          "type": "boolean",
          "default": true,
          "description": "Enable scanning for Accessibility (WCAG) violations."
        },
        "accessibilityGuardian.enableGdpr": {
          "type": "boolean",
          "default": true,
          "description": "Enable scanning for GDPR/Privacy risks and third-party vendors."
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.15.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "mailparser": "^3.6.0",
    "pdf-parse": "^1.1.1"
  }
}
